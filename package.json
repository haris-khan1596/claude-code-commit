{
  "name": "claude-code-commits",
  "displayName": "claude-code-commits",
  "publisher": "HarisKhan1596",
  "icon": "images/icon.png",
  "description": "One-click conventional commit messages powered by Claude Code CLI. Analyzes your staged changes and generates well-structured commit messages right in VS Code's Source Control panel.",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.109.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/haris-khan1596/claude-code-commit.git"
  },
  "categories": [
    "SCM Providers",
    "Snippets",
    "AI"
  ],
  "keywords": [
    "ai",
    "claude",
    "git",
    "commit",
    "conventional-commits",
    "anthropic",
    "conventional-commit",
    "message",
    "generate",
    "cli-tool"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-commits.generateCommit",
        "title": "Generate commit message with Claude Code CLI",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "claude-code-commits.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Sparkle Commit",
      "properties": {
        "sparkleCommit.claudeModel": {
          "type": "string",
          "default": "haiku",
          "description": "Claude model alias (sonnet, opus, haiku) or full model name (e.g., 'claude-sonnet-4-5-20250929')."
        },
        "sparkleCommit.commitRulesPath": {
          "type": "string",
          "default": ".vscode/commit-rules.md",
          "description": "Relative path to a custom commit rules file. If the file doesn't exist, the built-in default prompt is used."
        },
        "sparkleCommit.commitStyle": {
          "type": "string",
          "enum": [
            "conventional",
            "prefix",
            "simple"
          ],
          "default": "conventional",
          "enumDescriptions": [
            "Conventional Commits: type(scope): description",
            "Prefix only: type: description (no scope)",
            "Simple: plain descriptive message with no prefix"
          ],
          "description": "Commit message style. Ignored when a custom rules file exists at commitRulesPath."
        },
        "sparkleCommit.diffSource": {
          "type": "string",
          "enum": [
            "staged",
            "all",
            "auto"
          ],
          "default": "staged",
          "enumDescriptions": [
            "Only staged changes (git diff --staged)",
            "All working tree changes (git diff HEAD)",
            "Auto: use staged if available, otherwise all changes"
          ],
          "description": "Which changes to include when generating the commit message."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
